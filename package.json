{
    "name": "backend-alma",
    "version": "0.0.1",
    "main": "index.js",
    "license": "MIT",
    "keywords": [
        "API REST",
        "Node.js",
        "Webservice",
        "Métodos HTTP",
        "Banco de dados",
        "PostgreSQL",
        "ORM (Mapeamento de objeto relacional",
        "Typescript",
        "Tipagem estática",
        "Encriptação de senhas",
        "JWT"
    ],
    "scripts": {
        "start": "node dist/index.js",
        "dev": "nodemon -L",
        "prebuild": "npm run swagger",
        "build": "tsc --project tsconfig.json",
        "postbuild": "cp -r ./public ./dist",
        "build::clean": "rm -rf ./dist && tsc --project tsconfig.json",
        "lint": "eslint . --ext .ts",
        "docs": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
        "swagger": "tsoa spec",
        "test": "dotenv -e .env -- jest ",
        "prepare": "husky install",
        "commit": "git-cz",
        "typeorm": "dotenv -e .env -- ts-node-dev node_modules/.bin/typeorm",
        "typeorm:migration": "dotenv -e .env -- bash -c 'ts-node-dev node_modules/typeorm/cli.js migration:create $TYPEORM_MIGRATIONS_DIR/default'",
        "typeorm:up": "dotenv -e .env -- ts-node-dev node_modules/typeorm/cli.js migration:run -d src/infra/database/dataSource.ts ",
        "typeorm:generate": "dotenv -e .env -- ts-node-dev node_modules/typeorm/cli.js migration:generate -d src/infra/database/dataSource.ts src/infra/database/migrations/default",
        "docker:dev": "docker compose --file docker-compose.yml --compatibility up --build",
        "docker:stage": "docker compose --file docker-compose.yml --compatibility up --build"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@dotenv/cli": "^2.2.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^29.2.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.11.10",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.4",
        "@types/yup": "^0.29.13",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "commitizen": "^4.2.5",
        "concurrently": "^7.2.2",
        "cz-conventional-changelog": "3.3.0",
        "dotenv-cli": "^6.0.0",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "^29.2.2",
        "nodemon": "^2.0.19",
        "pm2": "^5.2.0",
        "prettier": "^2.5.1",
        "supertest": "^6.3.1",
        "ts-jest": "^29.0.3",
        "ts-node": "10.7.0",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.12.0",
        "tscpaths": "^0.0.9",
        "typescript": "4.5.2"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.188.0",
        "@prisma/client": "^3.14.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-async-errors": "^3.1.1",
        "jest-mock-extended": "^3.0.1",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "multer-s3": "^3.0.1",
        "pg": "^8.4.0",
        "prisma": "^3.14.0",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.4.0",
        "tsoa": "^4.1.0",
        "typeorm": "0.3.9",
        "uuid": "^8.3.2",
        "yup": "^0.32.11"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
